<configuration name="modules.conf" description="Minimal Modules for SIP Routing">
  <modules>
    <!-- Core Loggers -->
    <load module="mod_console"/>
    <load module="mod_logfile"/>
    
    <!-- Essential Core -->
    <load module="mod_sofia"/>          <!-- SIP endpoint -->
    <load module="mod_dialplan_xml"/>   <!-- XML dialplan -->
    <load module="mod_dptools"/>        <!-- Dialplan tools -->
    <load module="mod_commands"/>       <!-- API commands -->
    
    <!-- HTTP API -->
    <load module="mod_curl"/>           <!-- HTTP requests -->
    
    <!-- Essential Applications -->
    <load module="mod_hash"/>           <!-- Hash/variables -->
    <load module="mod_db"/>             <!-- Database -->
    <load module="mod_expr"/>           <!-- Expressions -->
    
    <!-- Event System -->
    <load module="mod_event_socket"/>   <!-- Event socket -->
    
    <!-- Codecs -->
    <load module="mod_g711"/>           <!-- PCMU/PCMA -->
    <load module="mod_g722"/>           <!-- G722 -->
    
    <!-- File Formats -->
    <load module="mod_sndfile"/>        <!-- Audio files -->
    <load module="mod_native_file"/>    <!-- Native format -->
    <load module="mod_tone_stream"/>    <!-- Tones -->
    
    <!-- Minimal Language Support -->
    <load module="mod_say_en"/>         <!-- English TTS -->
    
  </modules>
</configuration>
